@using SocialHighload.Service.Model.Enums
@model List<SocialHighload.Service.Model.Dto.DtoPerson>

@{
    ViewBag.Title = "Люди";
    Layout = "_Layout";
}
@if (Model.Count > 0)
{
    <table class="table table-striped table-bordered table-hover">
        <thead class="thead-light">
        <tr>
            <th scope="col">Фамилия, имя</th>
            <th scope="col">Возраст</th>
            <th scope="col">Город</th>
            <th scope="col">#</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var person in Model)
        {
            <tr>
                <td>@person.Surname @person.Name</td>
                <td>@person.Age</td>
                <td>@person.City</td>
                <td>
                    @switch (person.Status)
                    {
                        case FriendRequestStatus.None: 
                            <a class="btn btn-info" title="Добавить в друзья" href="@Url.Action("AddToFriends", new { targetPersonId = person.Id })"><i class="fa fa-user-plus"></i></a>
                            break;
                        case FriendRequestStatus.Sent:
                            <a class="btn btn-warning" title="Отменить заявку" href="@Url.Action("DeleteRequest", new { targetPersonId = person.Id })"><i class="fa fa-ban"></i></a>
                            break;
                        case FriendRequestStatus.Approved:
                            <a class="btn btn-danger" title="Удалить из друзей" href="@Url.Action("DeleteRequest", new { targetPersonId = person.Id })"><i class="fa fa-user-times"></i></a>
                            break;
                        case FriendRequestStatus.Rejected:
                            <a class="btn btn-warning" title="Отменить заявку" href="@Url.Action("DeleteRequest", new { targetPersonId = person.Id })"><i class="fa fa-ban"></i></a>
                            break;
                        default:
                            <div class="alert alert-danger"><strong>Неизвестный статус заявки: @person.Status.ToString("F")</strong></div>
                            break;
                    }
                </td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">Нет данных по людям</div>
}