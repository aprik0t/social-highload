@model SignInModel

@{
    ViewBag.Title = "Войти";
    Layout = "_Layout";
}

<div class="row">
    <div class="col-2"></div>
    <div class="col-8">
        <h2>Войти</h2>
        
        <form asp-action="SignIn" asp-controller="Account" asp-anti-forgery="true">
            <div class="validation" asp-validation-summary="ModelOnly"></div>
            <div>
                <div class="form-group">
                    <label asp-for="Email">Введите Email</label><input type="text" class="form-control" asp-for="Email" />
                    <span asp-validation-for="Email"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password">Введите пароль</label><input class="form-control" asp-for="Password" />
                    <span asp-validation-for="Password"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Войти" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
    <div class="col-2"></div>
</div>